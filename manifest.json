{
  "name": "quickmarks",
  "description": "Display your bookmarks in a better way!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage", 
    "activeTab", 
    "scripting",
    "bookmarks"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/qm16.png",
      "32": "/images/qm32.png",
      "48": "/images/qm48.png",
      "128": "/images/qm128.png"
    }
  },
  "icons": {
    "16": "/images/qm16.png",
    "32": "/images/qm32.png",
    "48": "/images/qm48.png",
    "128": "/images/qm128.png"
  }
}